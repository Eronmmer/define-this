{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": [
		"plugin:prettier/recommended"
	],
	"plugins": [
		"prettier"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": false
			}
		]
	}
}
